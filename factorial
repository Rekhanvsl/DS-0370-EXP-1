#include<stdio.h>
int factorial(int num);
void main()
{
	int num,result;
	printf("enter a postive number \n");
	scanf("%d",&num);
	result=factorial(num);
	printf("factorial=%d",result);
}
  int factorial(int num)
  {
  	if(num!=1)
  	{
  		return num*factorial(num-1);
	  }
	  else
	  {
	  	return num;
	  }
  }
